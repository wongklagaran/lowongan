  body
    .container
          block content
              section.content-header
                  h1
                      | Tambah Pengguna
                      small Tambah pengguna Anda disini
              // Main content
              section.content
                  // Your Page Content Here
                  // /.row
                  .row
                      .col-xs-12
                          .box
                              .box-header
                                  h3.box-title Pengguna Baru
                              // /.box-header
                              .box-body
                                  - if (messages.msg_error)
                                      .alert.alert-danger.alert-dismissable
                                          button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
                                          | !{messages.msg_error}
                                  - if (messages.msg_info)
                                      .alert.alert-success.alert-dismissable
                                          button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
                                          | #{messages.msg_info}

                                  form(action="/pemberikerja/addlowker", method="POST").form-horizontal
                                      .form-group
                                          label(for="NamaPekerjaan").col-md-3.control-label NamaPekerjaan
                                          .col-md-6
                                              input(type="text", name="NamaPekerjaan", id="NamaPekerjaan", value="#{ (NamaPekerjaan) ? NamaPekerjaan : '' }").form-control

                                      .form-group
                                          label(for="JenisPekerjaan").col-md-3.control-label JenisPekerjaan
                                          .col-md-6
                                              input(type="text", name="JenisPekerjaan", id="JenisPekerjaan", value="#{ (JenisPekerjaan) ? JenisPekerjaan : '' }").form-control


                                      .form-group
                                          label(for="Kemampuan").col-md-3.control-label Kemampuan
                                          .col-md-6
                                              input(type="text", name="Kemampuan", id="Kemampuan", value="#{ (Kemampuan) ? Kemampuan : '' }").form-control


                                      .form-group
                                          label(for="LokasiPekerjaan").col-md-3.control-label LokasiPekerjaan
                                          .col-md-6
                                                input(type="text", name="LokasiPekerjaan", id="LokasiPekerjaan", value="#{ (LokasiPekerjaan) ? LokasiPekerjaan : '' }").form-control


                                      .form-group
                                          label(for="Email").col-md-3.control-label Email
                                          .col-md-6
                                               input(type="email", name="Email", id="Email", value="#{ (Email) ? Email : '' }").form-control


                                       .form-group
                                           label(for="JenisPekerjaan").col-md-3.control-label NamaPemberiPekerjaan
                                           .col-md-6
                                                input(type="text", name="NamaPemberiPekerjaan", id="NamaPemberiPekerjaan", value="#{ (NamaPemberiPekerjaan) ? NamaPemberiPekerjaan : '' }").form-control

                                       .form-group
                                            label(for="TanggalInput").col-md-3.control-label TanggalInput
                                            .col-md-6
                                                 input(type="date", name="TanggalInput", id="TanggalInput", value="#{ (TanggalInput) ? TanggalInput : '' }").form-control

                                        .form-group
                                            label(for="Gaji").col-md-3.control-label Gaji
                                            .col-md-6
                                                input(type="number", name="Gaji", id="Gaji", value="#{ (Gaji) ? Gaji : '' }").form-control


                                      .form-group
                                          label(for="Tag").col-md-3.control-label Tag
                                          .col-md-6
                                              input(type="text", name="Tag", id="Tag", value="#{ (Tag) ? Tag : '' }").form-control

                                      .form-group
                                          label(for="DeskrepsiPekerjaan").col-md-3.control-label DeskrepsiPekerjaan
                                          .col-md-6
                                              textarea(type="text", name="DeskrepsiPekerjaan", id="DeskrepsiPekerjaan",rows="7", value="#{ (DeskrepsiPekerjaan) ? DeskrepsiPekerjaan : '' }").form-control


                                      .form-group
                                          .col-sm-offset-3.col-sm-6
                                              button(type="submit").btn.btn-primary
                                                  i.fa.fa-save
                                                  | &nbsp; Simpan
                                              | &nbsp; &nbsp; &nbsp;
                                              a(href="/pemberikerja/addlowker").btn.btn-danger Batal
                                              | &nbsp; &nbsp; &nbsp;
                                              button(type="reset").btn.btn-danger Reset



