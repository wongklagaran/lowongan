  body
    .container
          block content
              section.content-header
                  h1
                      | Tambah Pengguna
                      small Tambah pengguna Anda disini
              // Main content
              section.content
                  // Your Page Content Here
                  // /.row
                  .row
                      .col-xs-12
                          .box
                              .box-header
                                  h3.box-title Pengguna Baru
                              // /.box-header
                              .box-body
                                  - if (messages.msg_error)
                                      .alert.alert-danger.alert-dismissable
                                          button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
                                          | !{messages.msg_error}
                                  - if (messages.msg_info)
                                      .alert.alert-success.alert-dismissable
                                          button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
                                          | #{messages.msg_info}


                                  form(action="/pemberikerja/edituser/#{ (_id == undefined) ? pemberikerja._id : _id }", method="POST").form-horizontal

                                      .form-group
                                          label(for="lembaga").col-md-3.control-label lembaga
                                          .col-md-6
                                              input(type="text", name="lembaga", id="lembaga", value="#{ (lembaga == undefined) ? pemberikerja.perusahaan.lembaga :lembaga}").form-control

                                      .form-group
                                          label(for="alamat").col-md-3.control-label alamat
                                          .col-md-6
                                              input(type="text", name="alamat", id="alamat", value="#{ (alamat == undefined)  ? pemberikerja.perusahaan.alamat :alamat }").form-control

                                      .form-group
                                          label(for="email").col-md-3.control-label email
                                          .col-md-6
                                               input(type="email", name="email", id="email", value="#{ (email == undefined) ? pemberikerja.perusahaan.email : email }").form-control




                                      .form-group
                                          label(for="notelepon").col-md-3.control-label notelepon
                                          .col-md-6
                                              input(type="number", name="notelepon", id="notelepon", value="#{ (notelepon == undefined) ? pemberikerja.perusahaan.notelepon : notelepon}").form-control

                                      .form-group
                                          label(for="deskrepsi").col-md-3.control-label deskrepsi
                                          .col-md-6
                                              textarea(type="text", name="deskrepsi", id="deskrepsi",rows="7", value="#{ (deskrepsi == undefined) ? pemberikerja.perusahaan.deskrepsi : deskrepsi }").form-control


                                      .form-group
                                          input(type="hidden", name="_method", value="PUT")
                                          .col-sm-offset-3.col-sm-6
                                              button(type="submit").btn.btn-primary
                                                  i.fa.fa-save
                                                  | &nbsp; Simpan Lowker
                                              | &nbsp;
                                              a(href="/pemberikerja").btn.btn-danger Batal

