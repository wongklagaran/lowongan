<html>
  <head>
    <meta charset="UTF-8">
    <title>Web Conten Manager</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.2-->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/bootstrap/css/custom.css" rel="stylesheet" type="text/css">
    <!-- Font Awesome Icons-->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="/bootstrap/js/bootstrap.js&quot; rel=&quot;stylesheet">
    <script type="text/javascript" src="/bootstrap/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/jquery-1.11.1.min.js"></script>
    <script>(type='text/javascript' src='/bootstrap/js/bootstrap-3.1.1.min.js')</script>
    <script>(type='text/javascript' src='/bootstrap/js/jquery.isotope.min.js')</script>
    <script>(type='text/javascript' src='/bootstrap/js/jquery.singlePageNav.min.js')</script>
    <script>(type='text/javascript' src='/bootstrap/js/main.js')</script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
      $(document).ready(function(){
      $("button").click(function(){
      $("p").hide();
      });
      })
    </script>
  </head>
  <body>
    <div class="col-sm-8 col-sm-offset-2">
    <div class="jumbotron text-center">
      <h1><span class="fa fa-sign-in"></span> Signup</h1>

      <% if (message != null) { %>
        <div class="alert-danger"><%= message %></div>
      <% } %>

      <form action="/pemberikerja/signup" method="post">

        <div class="form-group">
            <label>username</label>
            <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group">
          <label>password</label>
          <input type="password" class="form-control" name="password" />
        </div>
        <div class="form-group">
          <label>perusahaan</label>
          <input type="text" class="form-control" name="perusahaan" />
        </div>
        <div class="form-group">
          <label>alamat</label>
          <input type="text" class="form-control" name="alamat" />
        </div>
        <div class="form-group">
          <label>email</label>
          <input type="email" class="form-control" name="email" />
        </div>
        <div class="form-group">
          <label>notelepon</label>
          <input type="numb" class="form-control" name="notelepon" />
        </div>
        <div>
          <input type="submit" class="form-control" value="Submit" />
        </div>
      </form>
    </div>
    <hr>
    <span class="fa fa-sign-in"> Already have an account?<a href="/login"> Login</a></span>
    <p>Or go <a href="/">home</a>.</p>
  </div>
  </body>
</html>
